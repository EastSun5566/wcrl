{
  "name": "wcrl",
  "version": "0.0.2",
  "description": "Ultra minimal web crawler",
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "bin": {
    "wcrl": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "playwright install chromium --with-deps",
    "dev": "tsc && node dist",
    "build": "rm -rf dist && tsc",
    "lint": "eslint --fix src",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "crawler",
    "scraper",
    "cli",
    "minimal"
  ],
  "author": "Michael Wang <michael19920327@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "chalk": "^5.6.2",
    "ora": "^9.0.0",
    "playwright": "^1.56.1"
  }
}
